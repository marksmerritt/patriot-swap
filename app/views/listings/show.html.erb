<!-- TODO: Do not show if current_user is the seller -->
<!-- TODO: Move to partial -->
<% if current_user %>
  <div>
    <% if @conversation %>
      <div id=<%= "conversation-btw-#{@listing.seller.id}-#{current_user.id}" %>>
        <%= @conversation.messages.inspect %>
      </div>
    <% else %>
      <%= link_to "Start a convo", book_listing_conversations_path(@listing.book, @listing), method: :post, id: "create-#{@listing.seller.id}-#{current_user.id}-conversation"   %>
    <% end %>
  </div>
<% end %>


<h1><%= @listing.title %></h1>
<p><%= @listing.body %></p>
<h3><%= @listing.seller.last_name %></h3>

<p>$<%= @listing.price %></p>
<p><%= @listing.book.title %></p>
<p><%= @listing.tag_names %></p>

<div class="row">
  <div class="col-md-12">
    <%= static_google_map(@listing.seller.longitude, @listing.seller.latitude) %>
  </div>
</div>

<ul>
  <% @listing.images.each do |img| %>
    <li>
      <%= image_tag img %>
    </li>
  <% end %>
</ul>