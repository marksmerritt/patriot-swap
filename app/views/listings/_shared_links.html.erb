<%= link_to "Edit", edit_listing_path(listing), id: "edit-listing-#{listing.id}" %>

<% if listing.active? %>
  <%= link_to "Inactivate listing", listing_status_path(listing), method: :patch, id: "inactivate-listing-#{listing.id}" %>
<% else %>
  <%= link_to "Activate listing", listing_status_path(listing), method: :patch, id: "activate-listing-#{listing.id}" %>
<% end %>