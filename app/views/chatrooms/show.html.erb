<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>

<div data-behvior='messages'>
  <% @messages.each do |message| %>
    <div><strong><%= message.user.first_name %>: </strong><%= message.body %></div>
  <% end %>
</div>

<%= form_for [@chatroom, Message.new] do |f| %>
  <%= f.text_area :body, class: "form-control", autofocus: true %>
<% end %>