<div class="sellers">
  <h3 class="sellers__heading">
    Enter your book's ISBN...
    <span class="sellers__manual-link"></span>
  </h3>
  
  <%= form_tag sellers_path, method: :get, class: "sellers__search-form" do %>
    <%= text_field_tag :q, nil, autofocus: true, class: "sellers__search-field", id: "book-search-field", value: "9780321445612" %>
    <%= submit_tag "Search", class: "sellers__search-btn", id: "book-search-submit" %>
  <% end %>
  
  <div class="sellers__search-results">
    <%= render partial: "books/book", locals: { book: @book } if @book %>  
  </div>
  
  <!-- TODO: Just for testing eBay API...remove -->
  <% if @ebay_books %>  
    <% @ebay_books.each do |result| %>
      <div>
        <%= image_tag result[:galleryURL].first %> <br>
        Title<%= result[:title].first %> <br>
        <%= link_to "View on eBay", "#{result[:viewItemURL].first}", target: "_blank" %> <br>
        Price: <%= result[:sellingStatus].first %>
      </div>
    <% end %>
  <% end %>
</div>
  