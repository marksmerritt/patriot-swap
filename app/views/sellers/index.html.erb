<h1>Sellers#index</h1>

<%= form_tag sellers_path, method: :get do %>
  <%= text_field_tag :q, nil %>
<% end %>

<% if @books %>
  <% @books.each do |book| %>
    <ul>
      <li>
        <%= image_tag book.image_link %>
      </li>
      <li>
        Title: <%= book.title %> <br>    
      </li>
      <li>
        ISBN: <%= book.isbn %>    
      </li>
      <li>
        Publisher: <%= book.publisher %>    
      </li>
      <li>
        Date Published: <%= book.published_date %>
      </li>
      <li>
        Authors: <%= book.authors %>
      </li>
      <li>
        Description: <%= book.description %>
      </li>
      <li>
        <%= link_to "Sell this book", book_from_google_path(isbn: book.isbn) %>
      </li>
    </ul>
  <% end %>
<% end %>